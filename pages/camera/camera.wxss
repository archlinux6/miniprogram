/* pages/camera/camera.wxss */
.camera {
  width: 100vw;
  height: 100vh;
}

.bottom {
  width: 690rpx;
  z-index: 1000;
  position: fixed;
  bottom: 0;
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.img {
  width: 100rpx;
  height: 100rpx;
  background-color: #1296DB;
  padding: 30rpx;
  border-radius: 130rpx;
}
image-cropper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}
